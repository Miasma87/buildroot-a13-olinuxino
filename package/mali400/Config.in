config BR2_PACKAGE_MALI400
	bool "mali400"
	depends on BR2_arm
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_LARGEFILE
	select BR2_PACKAGE_HAS_OPENGL_EGL
	select BR2_PACKAGE_HAS_OPENGL_ES
	select BR2_PACKAGE_HAS_OPENVG
	select BR2_PACKAGE_HAS_OPENMAX
	help
	  Mali400 display drivers.

	  Includes source for the ARM side code to interface to:
	  EGL, mmal, GLESv2, vcos, openmaxil, vchiq_arm, bcm_host, WFC, OpenVG.

	  https://github.com/linux-sunxi/sunxi-mali

comment "mali400 requires a toolchain with C++ and LARGEFILE support"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_LARGEFILE
